      END_IF
      
   Case(3)
   LuxMenuScroll_Left()
      IF_PICTURE_IN(116,283 , 315,315, "bmp/Luxcavation.bmp", 0, 95)
         LCLICK(1625,720)
         WAITMS(50)
      END_IF 

   Case(4)
